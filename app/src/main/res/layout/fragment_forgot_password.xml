<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ForgotPasswordFragment">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/edtFUsernameSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:textSize="32sp"
        android:hint="@string/Email"
        android:textAllCaps="false"
        android:background="@drawable/custom_edittext_3"/>
    <ProgressBar
        android:id="@+id/FprogressBar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">
    </ProgressBar>
    <TextView
        android:id="@+id/FloginNow"
        android:clickable="true"
        android:text="Already got an account? Login now"
        android:textSize="18sp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <Button
            android:id="@+id/btnFResetSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:textSize="24sp"
            android:textColor="@color/word_color_gray"
            android:textStyle="bold"
            android:text="@string/reset"
            android:textAllCaps="false"
            android:background="@drawable/custom_button_1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>