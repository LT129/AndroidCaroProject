<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameModeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:background="@drawable/custom_picture"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your name"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-10dp"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="30dp"
        android:textColor="@color/word_button"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textStyle="bold"
        android:text="Play Online"
        android:background="@drawable/custom_button_1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:id="@+id/btnPVE"
            android:textColor="@color/word_button"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textStyle="bold"
            android:text="Play with ai"
            android:background="@drawable/custom_button_1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:id="@+id/btnTwoPlayers"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textColor="@color/word_button"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="two players"
            android:background="@drawable/custom_button_1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/btnPlusPlus"
            android:textSize="28dp"
            android:textStyle="bold"
            android:textColor="@color/word_button"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="Plus-plus"
            android:background="@drawable/custom_button_1"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
        </LinearLayout>

</FrameLayout>