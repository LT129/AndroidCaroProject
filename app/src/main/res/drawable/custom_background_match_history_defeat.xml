<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
<!-- Border -->
<item>
    <shape>
        <solid android:color="#f000"/>
        <corners
            android:radius="20dp"/>
    </shape>
</item>
<!-- Body -->
<item
    android:left="2dp"
    android:right="2dp"
    android:top="2dp"
    android:bottom="2dp">
    <shape>
        <solid
            android:color="#FD7F87"/>
        <stroke
            android:width="0.5dp"
            android:color="#356FE1"/>
        <corners
            android:radius="20dp"/>
    </shape>
</item>
</layer-list>